@model _30Code.Models.Usuario

@{
    ViewBag.Title = "UsuDelete";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<style>
    .page-wrapper {
        background-color: white;
    }
</style>
<div class="page-wrapper mt-2">
    <div class="container">
        <h2>Deletar usuário</h2>

        <h3>Tem certeza que deseja deletar esse usuário?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Celular)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Celular)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Nascimento)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nascimento)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UrlImagem)
                </dt>
                <dt>
                    <img src="~/assets/img/Usuarios/@Model.UrlImagem"
                         style="max-width:70px;" />
                </dt>
                <dt>
                    @Html.DisplayNameFor(model => model.TiposUsuarios)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TiposUsuarios)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Sexos)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Sexos)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Deletar" class="btn btn-default" /> |
                    @Html.ActionLink("Voltar para Home", "Index")
                </div>
            }
        </div>
    </div>
</div>